
@{
    ViewBag.Title = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Detail</h2>
<fieldset>
    <div class="display-label">Mã sach: @Model.masach</div>
    <div class="display-label">Mã loại: @Model.maloai</div>
    <div class="display-label">Tên sach: @Model.tensach</div>
    <p><img width="200px" height="200px" src="@Model.hinh" alt="Hinh sach" /></p>
</fieldset>
@using (Html.BeginForm())
{
    <p>
        @Html.ActionLink("Delete", "Delete", new { id = Model.masach }) |
        @Html.ActionLink("Edit", "Edit", new { id = Model.masach }) |
        @Html.ActionLink("Back to List", "Index")
    </p>
}

